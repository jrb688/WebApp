@model WebAppCore.Models.Test

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Edit</h2>

<h4>Test</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestId" />
            <input type="hidden" asp-for="TestVersion" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EcuId" class="control-label"></label>
                <select asp-for="EcuId" class="form-control" asp-items="ViewBag.EcuId"></select>
                <span asp-validation-for="EcuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRun" class="control-label"></label>
                <input asp-for="DateRun" class="form-control" />
                <span asp-validation-for="DateRun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>

        <h2>Current Requirements:</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>

                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Req in Model.Requirement)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(ModelItem => Req.ReqId)
                    </td>
                    <td>
                        @Html.DisplayFor(ModelItem => Req.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteReq", new {reqId = Req.ReqId, testId = Req.TestId })

                    </td>
                </tr>
        }
            </tbody>
        </table>
        <br /><br />
        <h2>Current Procedures: </h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Parameters
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var Procedures in Model.TestProc)
                {
                    if (Procedures.BatchId == 0)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(ModelItem => Procedures.Proc.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(ModelItem => Procedures.Parameters)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteProc",  new { procID = Procedures.Proc.ProcId, testid = Procedures.TestId })

                            </td>
                        </tr>

                    }
                
                }

            </tbody>
        </table>
        <br /><br />
        <h4>@Html.ActionLink("Add Requirement", "CreateReq", new { TestId = (int)Model.TestId, TestVersion = (int)Model.TestVersion }, null)</h4>
        <h4>@Html.ActionLink("Add Procedure", "CreateProc", new { TestId = (int)Model.TestId, TestVersion = (int)Model.TestVersion }, null)</h4>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
