@model WebAppCore.Models.Test

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TestVersion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestVersion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateRun)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateRun)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ecu)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ecu.EcuModel)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>
            Procedures:
        </dt>
        @foreach (var Procedure in Model.TestProc)
        {
            <dd>
                @Html.DisplayFor(ModelItem => Procedure.Proc.Name)

            </dd>
        }
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Requirements:
        </dt>
        @foreach (var Req in Model.Requirement)
        {
            <dd>
                @Html.DisplayFor(ModelItem => Req.ReqId)
                @Html.DisplayFor(ModelItem => Req.Description)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TestId }) |
