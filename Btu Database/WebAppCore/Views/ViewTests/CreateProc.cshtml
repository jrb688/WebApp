@model WebAppCore.Models.TestProc

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>TestProc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProcConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestId" />
            <input type="hidden" asp-for="BatchId" value="0" />
            <input type="hidden" asp-for="BatchVersion" value="0" />

            <input type="hidden" asp-for="TestVersion" />
            <div class="form-group">
                <label asp-for="ProcId" class="control-label">Procedure</label>
                <select asp-for="ProcId" class="form-control" asp-items="ViewBag.ProcId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReqId" class="control-label">Requirement Description</label>
                <select asp-for="ReqId" class="form-control" asp-items="ViewBag.ReqId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Parameters" class="control-label">Parameters *Required</label>
                <input asp-for="Parameters" class="form-control" />
                <span asp-validation-for="Parameters" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Passed" value="0" />
            <input type="hidden" asp-for="Order" value="0" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewTests\Index" >Back to Tests</a>
</div>

